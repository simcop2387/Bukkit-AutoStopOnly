<project>
    <property name="lib.dir"     value="lib"/>

    <path id="classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="source" destdir="build/classes"  classpathref="classpath"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/AutoStop.jar" basedir="build/classes">
		<zipfileset dir="source" includes="plugin.yml" prefix=""/>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/AutoStop.jar" fork="true"/>
    </target>

</project>
